<!-- Profile Page -->
<a href="/logout" class="btn btn-outline-danger mb-3">Logout</a>

<div class="container mt-4">
    <h1 class="mb-4 text-center">My Profile</h1>

    <!-- Personal Information Section -->
    <div class="row">
        <div class="col-md-4">
            <h3>Personal Information</h3>
            <!-- Ensure the image exists or fallback to default -->
            <img src="<%= student.profile_image || '/images/default-profile.png' %>"
                class="img-fluid mb-3 rounded-circle" alt="Profile Picture" />
            <p><strong>Name:</strong>
                <%= student.first_name %>
                    <%= student.last_name %>
            </p>
            <p><strong>Student ID:</strong>
                <%= student.student_id %>
            </p>
            <p><strong>Email:</strong>
                <%= student.email || 'Not Provided' %>
            </p>
            <p><a href="/students/edit-profile" class="btn btn-primary">Edit Profile</a></p>
        </div>

        <!-- Grades Section -->
        <div class="col-md-8">
            <h3>My Grades</h3>
            <ul class="list-group">
                <% grades.forEach(grade=> { %>
                    <li class="list-group-item">
                        <strong>
                            <%= grade.module_title %>:
                        </strong>
                        <%= grade.first_grade ? grade.first_grade : 'N/A' %>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</div>

<!-- Add Chart.js for the bar chart -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>