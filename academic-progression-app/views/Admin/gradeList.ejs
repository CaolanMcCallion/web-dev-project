<!-- Header for the page -->
<a href="/admin/dashboard" class="btn btn-secondary mb-3" style="display: inline-block;">‚Üê Back to Dashboard</a>

<div class="container mt-4">
  <h1 class="mb-4">All Student Grades</h1>

  <!-- Table to display all grades with the student and module info -->
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <!-- Table headers for each column -->
      <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Module Title</th>
        <th>Grade</th>
        <th>Resit Grade</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Loop through each grade record and populate the table rows -->
      <% grades.forEach(grade=> { %>
        <tr>
          <!-- Display each piece of grade data -->
          <td>
            <%= grade.student_id %>
          </td>
          <td>
            <%= grade.first_name %>
          </td>
          <td>
            <%= grade.last_name %>
          </td>
          <td>
            <%= grade.module_title %>
          </td>
          <td>
            <%= grade.first_grade %>
          </td>
          <td>
            <%= grade.resit_grade ? grade.resit_grade : 'N/A' %>
          </td>

          <!-- Link to edit this specific grade -->
          <td>
            <a href="/admin/grades/edit/<%= grade.id %>" class="btn btn-sm btn-warning">Edit</a>
          </td>

          <!-- Delete button -->
          <td>
            <form action="/admin/grades/delete/<%= grade.id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger"
                onclick="return confirm('Are you sure you want to delete this grade?')">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>