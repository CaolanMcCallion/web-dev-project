<!-- Link back to dashboard -->
<a href="/admin/dashboard" class="btn btn-secondary mb-3" style="display: inline-block;">‚Üê Back to Dashboard</a>

<div class="container mt-4">
  <h1 class="mb-4">Progression Summary</h1>

  <!-- Table that displays each student's progression status -->
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Credits</th>
        <th>Average Grade</th>
        <th>Progression Status</th>
      </tr>
    </thead>
    <tbody>
      <!-- Loops through each student summary and shows the results -->
      <% summary.forEach(student=> { %>
        <tr>
          <td>
            <%= student.student_id %>
          </td>
          <td>
            <%= student.first_name %>
          </td>
          <td>
            <%= student.last_name %>
          </td>
          <td>
            <%= student.total_credits %>
          </td>
          <td>
            <%= student.average_grade %>
          </td>
          <td>
            <%= student.progression_status %>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>