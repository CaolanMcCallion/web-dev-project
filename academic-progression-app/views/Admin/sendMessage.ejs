<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Links to Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation bar with links to dashboard, messages, and logout -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Academic Progression</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/messages">View Messages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Container for the form to send a message -->
    <div class="container mt-4">
        <h1 class="mb-4">Send Message</h1>

        <!-- Form to send a message -->
        <form action="/admin/messages/send" method="POST">
            <!-- Dropdown to select recipient student -->
            <div class="mb-3">
                <label for="recipient_id" class="form-label">Recipient</label>
                <select id="recipient_id" name="recipient_id" class="form-control" required>
                    <option value="">Select Student</option>
                    <!-- Loop through all students and display each student in the dropdown -->
                    <% students.forEach(student=> { %>
                        <option value="<%= student.student_id %>">
                            <%= student.first_name %>
                                <%= student.last_name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <!-- Text box to input the message -->
            <div class="mb-3">
                <label for="message_text" class="form-label">Message</label>
                <textarea id="message_text" name="message_text" class="form-control" rows="4" required></textarea>
            </div>

            <!-- Submit button to send the message -->
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</body>

</html>